{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "incremental": false,
    "declaration": true,
    "declarationMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "lib": ["es2022"],
    "target": "es2022",
    "resolveJsonModule": true
  }
}
